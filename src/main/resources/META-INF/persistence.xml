  <persistence-unit name="OLLE" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.infotech.olle.Contact</class>
    <class>com.infotech.olle.Account</class>
    <class>com.infotech.olle.Identity</class>
    <class>com.infotech.olle.Spouse</class>
    <properties>
